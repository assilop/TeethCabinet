<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/MyStyle.css" rel="stylesheet" />
</head>
<body>
    @RenderBody()
    
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Saguenay Teeth", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>

            <li class="btn-group nav">
                <button type="button" class="btn navbar-btn dropdown-toggle" data-toggle="dropdown">
                    Gestion Patient
                    <span class="caret"></span>
                    <span class="sr-only">Toggle Dropdown</span>
                </button>
                <ul class="dropdown-menu" role="menu">
                    <li>@Html.ActionLink("Dossiers patients", "Index", "Patients")</li>
                    <li>@Html.ActionLink("RDVs", "Index", "RDVs")</li>
                    <li>@Html.ActionLink("Consultations", "Index", "Consultations")</li>
                </ul>
                <ul class="nav navbar-nav">                    
                    <li>@Html.ActionLink("Gestion personnel", "Index", "Personnels")</li>
                    <li>@Html.ActionLink("Roles", "Index", "AspNetRoles")</li>
                </ul>
                @Html.Partial("_LoginPartial")

            </li>

        </div>
    </div>
    <div class="container body-content col-sm-offset-2  "> 
       
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
