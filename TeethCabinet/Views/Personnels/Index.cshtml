@model IEnumerable<TeethCabinet.Models.Personnel>
@{
    ViewBag.Title = "Index";
}
<h2>Personnels</h2>

<div>
    @using (Html.BeginForm("Index", "Personnels", FormMethod.Get))
    {

        @Html.RadioButton("searchBy", "Nom", true) <text> Nom</text>
        @Html.RadioButton("searchBy", "Fonction") <text> Fonction</text>
        @Html.RadioButton("searchBy", "Login") <text> Login</text>
        @Html.RadioButton("searchBy", "Email") <text> Email</text><br />
        @Html.TextBox("search", null, new { @class = "form-control" });
        <button type="submit" class="btn btn-primary">Chercher</button>
    }

</div>
<br />
<table class="table table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nom)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Prenom)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Fonction)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Addresse)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NumTel)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Login)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Password)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NiveauDroits)
        </th>
        <th></th>
    </tr>

    @if (Model.Count() == 0)
    {
        <tr>
            <td colspan="9">Aucune ligne ne corresond aux criteres de recherche</td>
        </tr>
    }
    else
    {
        foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nom)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Prenom)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Fonction)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Addresse)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NumTel)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Login)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Password)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NiveauDroits)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.PersonnelID }, new { @class = "btn btn-warning btn-sm" })
                    @Html.ActionLink("Details", "Details", new { id = item.PersonnelID }, new { @class = "btn btn-info btn-sm" })
                    @Html.ActionLink("Delete", "Delete", new { id = item.PersonnelID }, new { @class = "btn btn-danger btn-sm" })
                </td>
            </tr>
        }
    }
</table>
<p>
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary" })
</p>
