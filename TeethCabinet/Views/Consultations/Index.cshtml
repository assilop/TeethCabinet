@model IEnumerable<TeethCabinet.Models.Consultation>

@{
    ViewBag.Title = "Consultations";
}

<h2>Consultations</h2>

<div>
    @using (Html.BeginForm("Index", "Consultations", FormMethod.Get))
    {

        @Html.RadioButton("searchBy", "Type", true) <text> Type</text>
        @Html.RadioButton("searchBy", "patient") <text> patient</text>
        @Html.RadioButton("searchBy", "personnel") <text> personnel</text>
        @Html.TextBox("search", null, new { @class = "form-control" });
        <button type="submit" class="btn btn-primary">Chercher</button>
    }

</div>
<br />


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Type)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Observation)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateConsultation)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Patient.Nom) patient
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Personnel.Nom) personnel
        </th>
        <th></th>
    </tr>

    @if (Model.Count() == 0)
    {
        <tr>
            <td colspan="9">Aucune ligne ne corresond aux criteres de recherche</td>
        </tr>
    }
    else
    {
        foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Type)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Observation)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateConsultation)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Patient.Nom)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Personnel.Nom)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.ConsultationID }, new { @class = "btn btn-warning btn-sm" })
                    @Html.ActionLink("Details", "Details", new { id = item.ConsultationID }, new { @class = "btn btn-info btn-sm" })
                    @Html.ActionLink("Delete", "Delete", new { id = item.ConsultationID }, new { @class = "btn btn-danger btn-sm" })
                </td>
            </tr>
        }

    }

</table>

<p>
    @Html.ActionLink("Creer nouveau", "Create", null, new { @class = "btn btn-primary" })
</p>
