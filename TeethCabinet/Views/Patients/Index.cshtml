@model IEnumerable<TeethCabinet.Models.Patient>
    @{
    ViewBag.Title = "Index";
    }
    <h2>Patients</h2>
    <div>
        @using (Html.BeginForm("Index", "Patients", FormMethod.Get))
        {

        @Html.RadioButton("searchBy", "Nom", true) <text> Nom</text>
        @Html.RadioButton("searchBy", "Sexe") <text> Sexe</text>
        @Html.RadioButton("searchBy", "NumSS") <text> NumSS</text>
        @Html.RadioButton("searchBy", "Addresse") <text> Addresse</text><br />
        @Html.TextBox("search", null, new { @class = "form-control" });
        <button type="submit" class="btn btn-primary">Chercher</button>
        }

    </div>
    <br />
    <table class="table table-striped">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Prenom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Addresse)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumTel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateNaissance)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sexe)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumSS)
            </th>
            <th></th>
        </tr>

        @if (Model.Count() == 0)
        {
        <tr>
            <td colspan="9">Aucune ligne ne corresond aux criteres de recherche</td>
        </tr>
        }
        else

        {
        foreach (var item in Model)
        {
        <tr class="table-">
            <td>
                @Html.DisplayFor(modelItem => item.Nom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Prenom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Addresse)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumTel)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateNaissance)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sexe)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumSS)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.PatientID }, new { @class = "btn btn-warning btn-sm" })
                @Html.ActionLink("Details", "Details", new { id = item.PatientID }, new { @class = "btn btn-info btn-sm" })
                @Html.ActionLink("Delete", "Delete", new { id = item.PatientID }, new { @class = "btn btn-danger btn-sm" })
            </td>
        </tr>
        }
        }
    </table>
    <p>
        @Html.ActionLink("Creer nouveau", "Create", null, new { @class = "btn btn-primary" })
    </p>
